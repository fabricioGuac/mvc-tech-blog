<div class="d-flex justify-content-end">
  {{#if logged_in}}
  <button class="btn btn-info mr-2" onclick="window.location.href='/dashboard'">Dashboard</button>
  <button class="btn btn-secondary" id="logout">logout</button>
  {{else}}
  <button class="btn btn-secondary" id="log-in" onclick="window.location.href='/login'" >login</button>
  {{/if}}
</div>
{{#each posts as |post|}}
<div class="post row mb-4 project">
  <div class="col-md-5">
    <h2>{{post.title}}</h2>
    <p>Posted by: {{post.user.username}} on {{format_date post.date}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
  <div>
    <button class="btn btn-sm btn-ligth" onclick="window.location.href='/comments/{{post.id}}'"><i class="fas fa-comment-dots fa-2x"></i></i></button>
    <p>{{post.comment_count}}</p>
  </div>
</div>
{{/each}}