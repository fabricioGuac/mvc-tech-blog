<div class="d-flex justify-content-end mb-2">
  <button class="btn btn-info mr-2" onclick="window.location.href='/'">Home</button>
  <button class="btn btn-secondary" id="logout">logout</button>
</div>
{{#each posts as |post|}}
<div class="post row mb-4">
  <div>
    <img src="{{post.image}}" class="img-fluid" alt="post-image">
  </div>
  <div class="col-md-6 title">
      <h3 class="text-break">{{post.title}}</h3>
  </div>
  <div class="col-md-6 d-flex justify-content-end title">
    <p>Posted by: {{post.user.username}} on {{format_date post.date}}</p>
  </div>
  <div class="col">
    <p class="text-break">
      {{post.content}}
    </p>
  </div>
  <div class="row">
    <div class="col d-flex justify-content-end align-items-end" data-id="{{post.id}}">
      <button class="btn btn-sm btn-danger mr-2" data-action="delete"><i class="fas fa-trash-alt"></i></button>
      <button class="btn btn-sm btn-warning" data-action="edit"><i class="fas fa-edit"></i></button>
    </div>
  </div>
</div>
{{/each}}

<div class="d-flex justify-content-center">
  <button class="btn btn-success" id="newPost" onclick="window.location.href='/newPost'" >+ New Post</button>
</div>
<script src="/js/dashboard.js"></script>