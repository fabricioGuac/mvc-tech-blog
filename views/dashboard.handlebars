{{!-- {{/if}} --}}
{{#each posts as |post|}}
<div class="post row mb-4">
  <div class="col-md-5">
    <h2>{{post.title}}</h2>
    <p>Posted by: {{post.user.username}} on {{format_date post.date}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
  <div class="col-md-4" data-id="{{post.id}}">
    <button class="btn btn-sm btn-danger" data-action="delete"><i class="fas fa-trash-alt"></i></button>
    <button class="btn btn-sm btn-warning" data-action="edit"><i class="fas fas fa-edit"></i></button>
  </div>
</div>
{{/each}}

<div class="d-flex justify-content-center">
  <button class="btn btn-success" id="newPost" onclick="window.location.href='/newPost'" >+ New Post</button>
</div>
<script src="/js/dashboard.js"></script>