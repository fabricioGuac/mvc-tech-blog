<div class="d-flex justify-content-end">
  <button class="btn btn-info mr-2" onclick="window.location.href='/'">Home</button>
  <button class="btn btn-secondary" id="logout">logout</button>
</div>
{{!-- {{#if showForm}} --}}
{{> newPost}}
{{!-- {{/if}} --}}
{{#each posts as |post|}}
<div class="post row mb-4 project">
    <div class="col-md-5">
      <h2>{{post.title}}</h2>
    <p>Posted by: {{post.user.username}} on {{format_date post.date}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
  </div>
   <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}"><i class="fas fa-trash-alt"></i></button>
      </div>
</div>
{{/each}}
<div class="d-flex justify-content-center">
  <button class="btn btn-success" id="newPost">+ New Post</button>
</div>
<script src="/js/dashboard.js"></script>