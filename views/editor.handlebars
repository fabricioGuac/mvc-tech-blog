<div class="col">
    <div>
        <h2 class="page-title text-center">Edit Post</h2>
        <form class="form edit-form">
            <div class="form-group">
                <label for="ed-title">Title:</label>
                <input class="form-control" type="text" id="ed-title" value="{{post.title}}" />
            </div>
            <div class="form-group">
                <label for="ed-content">Content:</label>
                <textarea class="form-control" id="ed-content" rows="5">{{post.content}}</textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit" data-id="{{post.id}}">Edit</button>
            </div>
        </form>
    </div>
</div>
<script src="/js/editor.js"></script>
