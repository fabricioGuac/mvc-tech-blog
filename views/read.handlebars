<div class="d-flex justify-content-end mb-2">
  <button class="btn btn-info mr-2" onclick="window.location.href='/'">Home</button>
  {{#if logged_in}}
  <button class="btn btn-info mr-2" onclick="window.location.href='/dashboard'">Dashboard</button>
  <button class="btn btn-secondary" id="logout">logout</button>
  {{else}}
  <button class="btn btn-secondary" id="log-in" onclick="window.location.href='/login'" >login</button>
  {{/if}}
</div>


<div class="post row mb-4">
  {{#if post.image}}
  <div>
    <img src="{{post.image}}" class="img-fluid" alt="post-image">
  </div>
  {{/if}}
  <div class="col-md-6 title">
      <h3 class="text-break">{{post.title}}</h3>
  </div>
  <div class="col-md-6 d-flex justify-content-end title">
    <p>Posted by: {{post.user.username}} on {{format_date post.date}}</p>
  </div>
  {{!-- <div class="row"> --}}
  <div class="col">
    <p class="text-break">
      {{post.content}}
    </p>
    </div>
  {{!-- </div> --}}
  <div class="row">
    <div class="col d-flex justify-content-end align-items-end">
      <button class="btn btn-sm" onclick="window.location.href='/comments/{{post.id}}'"><i class="fas fa-comment-dots fa-2x"></i></button>
      <p class="mb-2 mr-1">{{post.commentCount}}</p>
      {{#if liked}}
      <button  id="unlikeBtn" class="btn btn-sm" data-id="{{post.id}}"><i id="heartIcon" class="fas fa-heart fa-2x"></i></button>
      {{else}}
      <button  id="likeBtn" class="btn btn-sm" data-id="{{post.id}}"><i id="heartIcon" class="far fa-heart fa-2x"></i></button>
      {{/if}}
      <p class="mb-2 mr-1">{{post.likeCount}}</p>
    </div>
  </div>
</div>

