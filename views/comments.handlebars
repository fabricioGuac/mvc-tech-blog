{{#if comms.length}}
{{#each comms as |comm|}}
<div class="post row mb-4 project">
    <div class="col-md-5">
        <h2>{{comm.user.username}} on {{format_date comm.date}}</h2>
    </div>
    <div class="col-md-7">
        <p>
            {{comm.content}}
        </p>
    </div>
</div>
{{/each}}
{{/if}}
<div class="col">
        <div>
            <h2 class="page-title text-center">Add a new comment</h2>
            <form class="form comment-form">
                <div class="form-group">
                    <label for="comment">Comment:</label>
                    <input class="form-control" id="comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-success" type="submit" data-id="{{post_id}}">Comment</button>
                </div>
            </form>
                <button class="btn btn-warning mr-2" onclick="window.location.href='/'">Cancel</button>
        </div>
    </div>